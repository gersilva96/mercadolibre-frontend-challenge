{
  "name": "meli-challenge-front",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "reinstall-modules": "run-s clean:modules && yarn install",
    "clean:modules": "rimraf node_modules yarn.lock",
    "clean:build": "rimraf .next out build",
    "control": "run-s lint format type-check && yarn audit --production && echo \"\nControl finished!\n\"",
    "lint": "eslint --fix --ignore-path .eslintignore \"src/**/*.+(ts|tsx|js|jsx)\" && stylelint --fix --aei --config .stylelintrc \"src/**/*.+(css|scss|sass)\"",
    "format": "prettier --write --ignore-path .gitignore \"src/**/*.+(ts|tsx|js|jsx)\"",
    "type-check": "tsc",
    "dev": "next dev",
    "build": "run-s clean:build control && next build",
    "export": "run-s build && next export",
    "start": "next start"
  },
  "dependencies": {
    "@hookform/resolvers": "2.8.8",
    "@reduxjs/toolkit": "1.7.2",
    "axios": "0.25.0",
    "bootstrap": "^5.1.3",
    "date-fns": "2.28.0",
    "i18next": "21.6.11",
    "immer": "^9.0.12",
    "lodash-es": "4.17.21",
    "next": "12.0.10",
    "next-seo": "5.1.0",
    "postcss-scss": "^4.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.27.0",
    "react-i18next": "11.15.4",
    "react-redux": "7.2.6",
    "url-join": "^4.0.1",
    "yup": "0.32.11"
  },
  "devDependencies": {
    "@next/env": "12.0.10",
    "@types/lodash-es": "4.17.6",
    "@types/node": "^17.0.17",
    "@types/react": "17.0.39",
    "@types/url-join": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "eslint": "8.8.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "sass": "1.49.7",
    "stylelint": "14.5.0",
    "stylelint-config-recommended": "7.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.1.0",
    "typescript": "4.5.5"
  }
}
